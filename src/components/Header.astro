---
import ExternalLink from "./ExternalLink.astro";
---

<header id="main-header">
  <div
    class="container mx-auto px-4 md:px-0 md:flex justify-between text-center md:text-left"
  >
    <a href="/" class="no-underline">
      <span class="text-2xl text-silver-thistle-beige font-heading"
        >Kurtis Kemple</span
      >
    </a>
    <nav class="flex flex-grow justify-center md:justify-end space-x-6">
      <a
        href="/blog"
        class="font-heading md:text-xl no-underline hover:text-autumn-fire transition-all duration-300"
        >Writing</a
      >
      <a
        href="https://www.instagram.com/kurtiskemple/"
        class="font-heading md:text-xl no-underline hover:text-autumn-fire transition-all duration-300"
        >Photography
        <ExternalLink />
      </a>
      <a
        href="https://linkedin.com/in/kurtiskemple"
        class="font-heading md:text-xl no-underline hover:text-autumn-fire transition-all duration-300"
        >Work
        <ExternalLink />
      </a>
    </nav>
  </div>
</header>
